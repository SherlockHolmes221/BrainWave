<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/bgColor"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#ffffff"
            android:layout_weight="1.5"
            android:id="@+id/sqTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信号质量:" />

        <TextView
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:id="@+id/sqText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px" />

        <TextView
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:id="@+id/stateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sqTitle"
            android:text="工作状态:" />

        <TextView
            android:textColor="#ffffff"
            android:layout_weight="1.5"
            android:id="@+id/stateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/stateTitle" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接蓝牙"
            android:id="@+id/headsetButton"
            android:textSize="12dp"
            android:maxHeight="50dp"
            android:minHeight="20dp" />

        <Button
            android:id="@+id/cannedDataButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:minHeight="20dp"
            android:text="储存信息"
            android:textSize="12dp" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:maxHeight="50dp"
            android:minHeight="20dp"
            android:text="开始"
            android:textSize="12dp" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:maxHeight="50dp"
            android:minHeight="20dp"
            android:text="停止"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:textColor="#ffffff"
            android:id="@+id/attCheckBox"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="集中度"
            android:textSize="10sp" />

        <CheckBox
            android:textColor="#ffffff"
            android:shadowColor="#6bb9f0"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="专注度"
            android:id="@+id/medCheckBox"
            android:checked="false"
            android:textSize="10dp" />


        <CheckBox
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启指示灯"
            android:id="@+id/blinkCheckBox"
            android:checked="false"
            android:textSize="10dp" />

        <CheckBox
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="波形显示"
            android:id="@+id/bpCheckBox"
            android:checked="false"
            android:textSize="10dp" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/setAlgosButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="40dp"
            android:minHeight="20dp"
            android:padding="5dp"
            android:text="选择"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ffffff"
                android:text="集中度:"
                android:id="@+id/attTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setAlgosButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:textColor="#ffffff"
                android:text="--"
                android:id="@+id/attText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/attTitle"
                android:layout_toRightOf="@+id/attTitle"
                android:layout_toEndOf="@+id/startButton"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ffffff"
                android:text="放松度:"
                android:id="@+id/medTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/attText"
                android:layout_centerHorizontal="true" />

            <TextView
                android:textColor="#ffffff"
                android:text="--"
                android:id="@+id/medText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/medTitle"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@+id/medTitle" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:textColor="#ffffff"
            android:id="@+id/blinkTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指示灯" />

        <ImageView
            android:id="@+id/blinkImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:maxHeight="20dp"
            android:maxWidth="10dp"
            android:minHeight="20dp"
            android:minWidth="10dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/led_off" />


        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="显示图形"
            android:id="@+id/bpTitle"
            android:textSize="12dp"
            android:maxHeight="50dp"
            android:minHeight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="状态：" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/state"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Dn1: "
            android:textColor="#ffffff" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/dn1"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Dn2: "
            android:textColor="#ffffff" />

        <TextView
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/dn2"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:maxHeight="50dp"
            android:minHeight="20dp"
            android:id="@+id/setIntervalButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="采样频率"
            android:textSize="12dp" />

        <SeekBar
            android:id="@+id/intervalSeekBar"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="4" />

        <TextView
            android:id="@+id/intervalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/plot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/include"
        android:layout_below="@+id/setIntervalButton"
        android:layout_marginTop="5dp" />

</LinearLayout>
