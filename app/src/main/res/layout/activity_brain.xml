<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@color/bgColor"
    android:fadingEdge="vertical">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:text="脑电波详情图"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/brain_act_date_tv"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="2018年11月20日"
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.quxian.brainwave.widget.DashboardView
                android:id="@+id/brain_act_dashboardview"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:maxLines="1"
                    android:gravity="center"
                    android:textColor="@color/color_purple"
                    android:text="今天的情绪指数高"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:padding="5dp"
            android:text="前额皮肤电压"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/brain_act_linechart1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/bgColor"
            android:layout_margin="16dp"/>

        <TextView
            android:padding="5dp"
            android:text="专注度/放松度"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/brain_act_linechart2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/bgColor"
            android:layout_margin="16dp"/>
    </LinearLayout>
</ScrollView>
